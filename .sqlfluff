[sqlfluff]
templater = dbt
# dbt templating does not keep trailing new lines (L009)
exclude_rules = L009,L031,L046

[sqlfluff:rules]
tab_space_size = 4

[sqlfluff:rules:L010]
capitalisation_policy = upper


[sqlfluff:rules:L014]
extended_capitalisation_policy = lower

[sqlfluff:templater:dbt]
profiles_dir = ./ci_profiles
